<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th> Product name</th>
      <!--<th>First name</th>
      <th>Last name</th>-->
      <th>Product count</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
      <!--customer.orders.each do
      #order-->
        <td><%= order.customer.first_name %></td>
        <td><%= order.customer.last_name %></td>
        <td><%= order.product_name %></td>
        <td><%= order.product_count %></td>
        <!--<td><%= order.customer %></td>-->
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure you want to delete this order?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

